<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DescriptonActivity"
    tools:showIn="@layout/activity_descripton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/red">

        <android.support.v4.view.ViewPager
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/imageviewPager">

        </android.support.v4.view.ViewPager>
            <RelativeLayout
                android:layout_alignBottom="@+id/imageviewPager"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/btn1"
                    android:src="@drawable/nonselecteditem_dot"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/btn2"
                    android:src="@drawable/nonselecteditem_dot"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@id/btn1"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/btn3"
                    android:src="@drawable/nonselecteditem_dot"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@id/btn2"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="Name"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/built"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The name and when the building was built."
            android:layout_below="@+id/name"
            android:background="@color/red"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the description about the site."
            android:scrollbars="vertical"
            android:layout_below="@+id/built"
            android:id="@+id/description"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>

</LinearLayout>
