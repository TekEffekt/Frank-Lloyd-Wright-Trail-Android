<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="appfactory.edu.uwp.franklloydwrighttrail.Fragments.TripPlannerTimesFragment"
    tools:showIn="@layout/activity_trip_times"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/start_time_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/starts"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/start"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/start_time"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:paddingRight="10dp"
                        android:text="@string/time_entry"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:layout_toRightOf="@id/starts"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <RelativeLayout
                    android:id="@+id/end_time_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/ends"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/end"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/end_time"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:paddingRight="10dp"
                        android:text="@string/time_entry"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:layout_toRightOf="@id/ends"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:text="@string/cont"
                android:textSize="22dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>