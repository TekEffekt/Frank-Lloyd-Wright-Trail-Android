<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/trip_menu_item_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="Sample Trip" />
        <ImageView
            android:id="@+id/right_arrow_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/edit_trip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/right_arrow_view"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_edit"/>
        <ImageView
            android:id="@+id/remove_trip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/edit_trip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_remove"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>